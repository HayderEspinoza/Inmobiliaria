@media (min-width: 1200px)
	.menu
		width 550px !important
	.menu-hidden
		margin-left -550px
	.scrollUp
		position fixed
		bottom 50px
		right 50px
		border-radius(50%)
		padding 4px
		span
			font-size 40px
			color #00a651
	.carousel-indicators
		left 45% !important
		bottom 30px
		li
			float left
			margin-right 30px !important
	.busqueda-portada
		visibility visible
		position absolute
		top 70px
		left 75%
		border 1px solid white
		color white
		border-radius(2px)
		line-height 15px
		padding 6px
		cursor pointer
		&:hover
			color white
		.icono-search
			padding 6px 10px 8px 0
			border-right 1px solid white
	.formulario-portada
		background rgba(206, 206, 206, 0.54)
		width 320px
		min-height 500px
		padding 50px 20px 30px 20px
		position absolute
		top 100px
		left 75%
	.item
		.img-1
			padding-top 20%
		.img-2
			padding-top 20%
		.img-3
			padding-top 26%
		.img-4
			padding-top 20%
		.carousel-caption
			h2
				font-size 48px !important
	.destacados
		.title-destacados
			span
				&:after, &:before
					content ''
					width 100px
					height 1px
					background #8b8b8d
					position absolute
					top 50%
					right -105px
				&:before
					left -105px
	
	