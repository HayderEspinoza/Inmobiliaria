@font-face
	font-family: telegrafico
	src: url("../fonts/telegrafico.ttf")
@font-face
	font-family: lemon
	src: url("../fonts/LemonMilk.otf")
@font-face
	font-family: cobert-regular
	src: url("../fonts/Corbert-Regular.otf")
*
	font-family telegrafico
a
	&:link, &:visited, &:hover
		text-decoration none !important
		color white
.logo
	font-size 20px
	line-height 15px
	.one
		color white
	.two
		color #f1cb3f
		font-size 22px
.toggle
	background #ffcc29
	position fixed
	left 0
	top 50%
	z-index 89
	line-height 12px
	text-align center
	padding 37px 12px
	margin-top -65px
	.icon-menu
		font-size 40px
	.toggle-name
		font-size 15px
		color #222
.menu
	height 100%
	background #030304
	padding 80px 60px 0 100px
	position fixed
	transition .5s margin ease
	left 0
	z-index 90
	.cerrar
		position absolute
		left 5%
		top 50%
		font-size 26px
		color #59595b
		margin-top -15px
		background #121417
		border-radius(50%)
		padding 6px
		line-height 0
		span
			transition .5s color ease-in
		&:hover
			span
				color #ccc
.menu-hidden
	margin-left -500px	
.menu-lista
	padding 50px 0 50px 0
	text-align center
	font-size 24px
	li
		border-bottom 1px solid #59595b
		list-style none
		padding 10px 0
		transition .5s all ease-out
		a
			font-family cobert-regular
			color #59595b
			transition .5s all ease-out
		&:hover
			border-color white
			a
				color #f1cb3f
.redes-sociales
	list-style none
	padding 0
	li
		display inline-block
		width 19%
		a
			font-size 35px
			color #59595b
			transition .7s color ease 
			&:hover
				color white
.scrollUp
	display none
.carousel-caption
	top 0
.carousel-indicators
	li
		margin-right 10px !important
.scroll-down
	width 100%
	over-flow hidden
	position absolute
	bottom 50px
	left 0
	line-height 5px
	text-decoration none
	.btn-scroll
		color #00a651
		font-size 50px
		&:link, &:visited, &:hover
			text-decoration none !important
		&:hover
			font-size 52px
	.scroll-text
		color white
		font-size 18px
.busqueda-portada
	visibility hidden
.buscar
	background #ee1c24
	border 2px solid white
	border-radius 0
.formulario-portada
	display none
	input, select
		border-radius 0 !important
.carousel-caption
	font-family lemon
.destacados
	padding 30px 0 70px 0
	background #000
.wrap
	width 80%
	min-height 50px
	overflow hidden
	margin auto
.title-destacados
	padding 30px 0
	span
		font-size 30px
		font-family cobert-regular
		color #4b4b4d
		position relative				
.apartamento
	border 1px solid grey
	margin-bottom 20px
	.img-apartamento
		overflow hidden
		max-height 250px
.tipo-apartamento
	background #ed1b23
	color white
	font-size 19px
	padding 5px 15px
.descripcion
	padding 7px 20px
	color white
	font-family cobert-regular
	line-height 15px
	span
		color #ffcc29
		font-size 19px
		font-family cobert-regular
		position relative
		&:after, &:before
			content ''
			width 45px
			height 1px
			background white
			position absolute
			top 50%
			right -55px
		&:before
			left -55px
	table
		width 100%
		text-align center
		td
			padding 4px 0
.wrap-busqueda
	padding 40px 0 0 0
	.formulario
		background #4b4b4d
		color white
		padding-top 10px
		padding-bottom 20px
		.title-formulario
			padding-bottom 10px
			border-bottom 1px solid white
			font-size 18px
		input, select
			border-radius 0
.text-pagination
	color white
	font-family cobert-regular
.pagination
	li
		a
			margin-right 5px
			background transparent
			color white
			border-radius(5px !important)
			font-family cobert-regular
			border-color #333
			padding-top 9px
			padding-bottom 9px
			&:hover
				background #4b4b4d
				color white
.footer
	background #4b4b4d
	color white
	padding 30px
	ul
		li
			font-family cobert-regular
			list-style none
			&:first-child
				position relative
				font-family telegrafico
				font-size 17px
				line-height 50px
				&:after
					content ''
					width 130px
					height 2px
					position absolute
					bottom 10px
					left 0
					background white
	.copyright
		font-family cobert-regular
		padding 20px 0